<Window x:Class="Wpf_Practice3_stackpanel_listbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Practice3_stackpanel_listbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- stackpanel instead of a grid -->
    <!--<Grid>
        
    </Grid>-->
    <StackPanel>
        <!-- margin = adds a margin along all 4 directions -->
        <TextBlock HorizontalAlignment="Center" Margin="20">hello world</TextBlock>
        <!-- this only uses up as much space as required -->
        <ListBox Height="100" Width="100">
            <!-- both below work the same -->
            <ListBoxItem Content="item1"></ListBoxItem>
            <ListBoxItem Content="item2" />
            <ListBoxItem Content="item3"></ListBoxItem>
        </ListBox>
        <Button Content="click me" Click="Button_Click" Width="100"></Button>
    </StackPanel>
</Window>
